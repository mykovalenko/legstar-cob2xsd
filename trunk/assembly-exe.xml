<!--
Assembly descriptor for the executable jar.
-->
<assembly>
    <id>exe</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <unpack>true</unpack>
            <scope>runtime</scope>
            <!-- Only need to distribute the antlr runtime -->
            <excludes>
                <exclude>org.antlr:antlr</exclude>
                <exclude>antlr:antlr</exclude>
                <exclude>org.antlr:stringtemplate</exclude>
                <exclude>org.codehaus.jackson:*</exclude>
            </excludes>
        </dependencySet>
     </dependencySets>
    <fileSets>
        <fileSet>
            <directory>src/test/resources</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>log4j.properties</include>
                <include>log4j.debug.properties</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
